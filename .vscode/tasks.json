{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "pythonEnv",
            "type": "pickString",
            "description": "Select Python environment",
            "options": [
                "venv310",
                "venv313",
                "All"
            ],
            "default": "All"
        }
    ],
    "tasks": [
        {
            "label": "nuitka build",
            "type": "shell",
            "command": "echo unsupported platform && exit 1",
            "args": [
                "--mode=module",
                "--clang",
                "${workspaceFolder}/src/skydel/skydelsdx/commands.py",
                "--output-dir=build",
                "--output-folder-name=${input:pythonEnv}_${os}",
                "--nofollow-imports",
                "--no-pyi-file",
                "--no-pyi-stubs",
            ],
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src"
                }
            },
            "linux": {
                "command": "${workspaceFolder}/${input:pythonEnv}/bin/nuitka"
            },
            "windows": {
                "command": "${workspaceFolder}/${input:pythonEnv}/Scripts/nuitka"
            },
            "problemMatcher": []
        },
        {
            "label": "nuitka build all",
            "type": "shell",
            "dependsOn": [
                {
                    "task": "nuitka build",
                    "condition": "${input:pythonEnv} == 'venv310' || ${input:pythonEnv} == 'All'"
                },
                {
                    "task": "nuitka build",
                    "condition": "${input:pythonEnv} == 'venv313' || ${input:pythonEnv} == 'All'"
                }
            ],
            "command": "echo",
            "args": [
                "Successfully build on current platform with all Python versions."
            ],
            "problemMatcher": []
        }
    ]
}