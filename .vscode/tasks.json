{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "nuitka build commands (Windows)",
            "type": "shell",
            "command": "${workspaceFolder}/venv/Scripts/nuitka",
            "args": [
                "--module",
                "--clang",
                "${workspaceFolder}/src/skydel/skydelsdx/commands.py",
                "--output-dir=build",
                "--nofollow-imports",
                "--include-module=skydel.skydelsdx.commands",
                "--verbose"
            ],
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src"
                }
            },
        },
        {
            "label": "nuitka build commands (Linux)",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/nuitka",
            "args": [
                "--module",
                "--clang",
                "${workspaceFolder}/src/skydel/skydelsdx/commands.py",
                "--output-dir=build",
                "--nofollow-imports",
                "--include-module=skydel.skydelsdx.commands",
                "--verbose"
            ],
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src"
                }
            },
        },
        {
            "label": "pdm build",
            "type": "shell",
            "command": "pdm",
            "args": [
                "build",
                "--no-sdist",
                "--verbose"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ]
}